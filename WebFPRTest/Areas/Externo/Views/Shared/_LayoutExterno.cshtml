<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Federación Peruana de Rugby</title>
    <partial name="_LinksLayout">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="Externo" asp-controller="Equipo" asp-action="Equipo">
                    <img src="https://raw.githubusercontent.com/vdanfel/WebFPRTest/main/LogoLayout.svg" style="max-height:3.5rem" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link me-3 text-dark" asp-area="Externo" asp-controller="Equipo" asp-action="Equipo">Datos club</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link me-3 text-dark" asp-area="Externo" asp-controller="Jugador" asp-action="Index">Jugadores</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link me-3 text-dark" asp-area="Externo" asp-controller="Acreditacion" asp-action="Acreditacion">Acreditacion</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Login" asp-action="Login">
                                <i class="bi bi-box-arrow-left h3" style="color:#bc1c2c"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top py-2">
        <div class="container">
            Federacion Peruana de Rugby - &copy; By $hadoW
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
